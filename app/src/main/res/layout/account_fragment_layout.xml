<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/account_name_til"
        android:layout_marginTop="16dp"
        style="@style/fragment_account_text_input_layout"
        android:hint="@string/fragment.account.store_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/account_name_tiedt"
            style="@style/fragment_account_text_input_edit_text"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/account_address_til"
        style="@style/fragment_account_text_input_layout"
        android:hint="@string/fragment.account.store_address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_name_til">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/account_address_tiedt"
            style="@style/fragment_account_text_input_edit_text"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/account_phone_number_til"
        style="@style/fragment_account_text_input_layout"
        android:hint="@string/fragment.account.store_phone_no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_address_til">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/account_phone_numbertiedt"
            style="@style/fragment_account_text_input_edit_text"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/account_mail_til"
        style="@style/fragment_account_text_input_layout"
        android:hint="@string/fragment.account.store_mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_phone_number_til">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/account_mail_tiedt"
            style="@style/fragment_account_text_input_edit_text"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/account_store_type_til"
        style="@style/fragment_account_text_input_layout"
        android:hint="@string/fragment.account.store_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_mail_til">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/account_store_type_tiedt"
            style="@style/fragment_account_text_input_edit_text" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/account_wallet_amount_til"
        style="@style/fragment_account_text_input_layout"
        android:hint="@string/fragment.account.store_wallet_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_store_type_til">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/account_wallet_amount_tiedt"
            style="@style/fragment_account_text_input_edit_text" />

    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>