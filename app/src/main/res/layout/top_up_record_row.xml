<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/colorAccent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_margin="8dp"
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tudtv"
            android:text="datetime :"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp" >
        </TextView>
        <TextView
            android:layout_below="@+id/tudtv"
            android:id="@+id/tuntv"
            android:text="phone :"
            android:layout_alignRight="@+id/tudtv"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/tubtv"
            android:layout_alignRight="@+id/tudtv"
            android:gravity="center_vertical"
            android:layout_below="@+id/tuntv"
            android:text="balance :"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/topUpDateTV"
            android:text="100"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/tudtv"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/topUpNumberTV"
            android:text="09123456789"
            android:gravity="center_vertical"
            android:layout_alignTop="@+id/tuntv"
            android:layout_alignLeft="@+id/topUpDateTV"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/topUpBalanceTV"
            android:text="10000 mmk"
            android:gravity="center_vertical"
            android:layout_alignLeft="@+id/topUpDateTV"
            android:layout_alignTop="@+id/tubtv"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>